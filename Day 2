#include<stdio.h>
int main() {
    int i;
   for(i=1;i<=10;i++)
   {
       printf("%i ",i);
   }
}

To find sum of natural numbers
#include<stdio.h>
int main() {
    int i,sum;
    printf("The first 10 natural numbers are:\n");
   for(i=1;i<=10;i++)
   {
     printf("%d ",i);  
     sum=sum+i;
   }
   printf("\nThe sum is : %d",sum);
}

To find sum and average
#include<stdio.h>
int main() {
    int i,sum=0,num;
    float avg;
    printf("Input the 10 numbers :\n");
    for(i=1;i<=10;i++)
   {
    
     scanf("%d\n",&num);
      printf("Number %d is %d\n",i,num);
     sum=sum+num;
   }
   avg=sum/10.0;
   printf("\nThe sum is : %d",sum);
   printf("\nThe average is : %.6f",avg);
}

To find cube of numbers
#include<stdio.h>
int main() {
    int i,prod=1,num;
    printf("Input number of terms :");
    scanf("%d",&num);
    for(i=1;i<=num;i++)
   {
     prod=i*i*i;
     printf("\nNumber is %d and cube of %d is : %d",i,i,prod);
   }
   
}

#include<stdio.h>
int main() {
    int i,j,n;
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=i;j++)
        {
            printf("%d",i);
        }
        printf("\n");
    }
   
}
