To display ASCII value and Alphabets in small case
#include<stdio.h>
int main() {
    int i;
   for(i=122;i>=97;i--)
   {
       printf("%c=%i ",i,i);
   }
}

To display Alphabets in small case
#include<stdio.h>
int main() {
    int i;
   for(i=122;i>=97;i--)
   {
       printf("%c ",i);
   }
}

To display numbers from 10 to 1
#include<stdio.h>
int main() {
    int i;
   for(i=10;i>=1;i--)
   {
       printf("%d ",i);
   }
}

To check for infinite loop
#include<stdio.h>
int main() {
    int i;
   for(i=122;;i--)
   {
       printf("%c=%d ",i,i);
   }
}

To display boolean datatype
#include<stdio.h>
#define true 1
int main() {
       printf("%d ",true);
}
